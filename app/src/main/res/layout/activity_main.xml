<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/scrollbarStyleVertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.blackbox.ffmpeg.examples.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="@dimen/default_gap"
        android:nestedScrollingEnabled="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/audio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:background="@color/colorAccent"
            android:text="Audio 1"
            android:padding="@dimen/default_gap"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/audio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:background="@color/colorAccent"
            android:text="Audio 2"
            android:padding="@dimen/default_gap"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="30sp" />



    </LinearLayout>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/audio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text="Audio 3"
        android:padding="@dimen/default_gap"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_merge_audio_video"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="@string/txt_merge_audio_video" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:visibility="gone"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:columnOrderPreserved="true"
        app:rowOrderPreserved="true"
        app:useDefaultMargins="true">


        <Button
            android:id="@+id/btn_create_movie"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_make_movie"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_resize_video"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_resize_video"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_split_video"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_split_video"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_trim_video"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_trim_video"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_text_on_video"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_text_on_video"
            app:layout_column="1"
            app:layout_row="2" />


        <Button
            android:id="@+id/btn_merge_videos"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_merge_videos"
            app:layout_column="0"
            app:layout_row="4" />


        <Button
            android:id="@+id/btn_trim_audio"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_trim_audio"
            app:layout_column="0"
            app:layout_row="6" />

        <Button
            android:id="@+id/btn_extract_audio"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_extract_audio"
            app:layout_column="1"
            app:layout_row="6" />

        <Button
            android:id="@+id/btn_merge_audio"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_merge_audio"
            app:layout_column="0"
            app:layout_row="7" />

        <Button
            android:id="@+id/btn_video_to_gif"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_video_to_gif"
            app:layout_column="0"
            app:layout_row="9" />

        <Button
            android:id="@+id/btn_video_to_images"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_video_to_images"
            app:layout_column="1"
            app:layout_row="9" />

        <Button
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/txt_audio_section"
            android:textAllCaps="false"
            android:textColor="@color/colorHeading"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="5"
            app:layout_rowSpan="1" />

        <Button
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/txt_video_section"
            android:textAllCaps="false"
            android:textColor="@color/colorHeading"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="0"
            app:layout_rowSpan="1" />

        <Button
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/txt_image_section"
            android:textAllCaps="false"
            android:textColor="@color/colorHeading"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="8"
            app:layout_rowSpan="1" />

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>